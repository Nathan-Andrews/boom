#!/usr/bin/env bash

# Holiday boom emojis

year=$(TZ=$BOOMTZ date +%Y)
month=$(TZ=$BOOMTZ date +%m)
day=$(TZ=$BOOMTZ date +%d)

##########################
### ğŸ¦ƒ Thanksgiving ğŸ¦ƒ ###
##########################

# Calculate the day of week of the 1st day of Nov between 0 and 6
# 0=Sun, 1=Mon, ...
firstdayofnov=$(date -d "${year}-11-1" +%w)
firstthursofnov=$(( (11 - $firstdayofnov) % 7 + 1 ))

# We want from Monday before Monday before thanksgiving thru thanksgiving day
thxrange_start=$(( $firstthursofnov + 11 ))
thxrange_end=$(( $firstthursofnov + 21 ))

if [[ "$month" == "11" && $day -ge $thxrange_start && $day -le $thxrange_end ]]; then
  _BE_BOOM="ğŸ"
  _BE_HOLE="ğŸ§º"
  # no _BE_BOT
  _BE_SUPER="ğŸŒ¾"
  _BE_HOG="ğŸ¦ƒ"
  _BE_IMPORT="ğŸ½ï¸"
  _BE_EXPORT="ğŸ¥§"
  _BE_CHECK="ğŸ´"
fi
unset firstdayofnov firstthursofnov thxrange_start thxrange_end

######################
### ğŸ… December ğŸ… ###
######################

# All of december except NYE is holiday themed
if [[ "$month" == "12" && "$day" != "31" ]]; then
  _BE_BOOM="ğŸ"
  _BE_HOLE="ğŸª¨"
  _BE_BOT="ğŸ…"
  _BE_SUPER="â„ï¸"
  _BE_HOG="ğŸ¦Œ"
  _BE_IMPORT="ğŸ„"
  _BE_EXPORT="ğŸ›·"
  _BE_CHECK="ğŸ§±"
fi

######################
### ğŸ† New Year ğŸ† ###
######################

if [[ "$month" == "01" && $day -le 7 ]]; then
  _BE_BOOM="ğŸ‡"
  # no _BE_HOLE
  _BE_BOT="ğŸ•º"
  # no _BE_SUPER
  # no _BE_HOG
  _BE_IMPORT="ğŸ¥‚"
  _BE_EXPORT="ğŸ¾"
  _BE_CHECK="ğŸ†"
fi

unset year month day

