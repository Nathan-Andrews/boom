#!/usr/bin/env bash

# .boomrc alphabet extension for text to ascii

###Function text2ascii
# "\t${B}text2ascii${N} TEXT";
# "\t\ttext2ascii will print a basic ascii version of input TEXT";
# "\t\tthis command allows the equivalent functionality of \`chat /text\` in the cmd line";
###
text2ascii() {
  if [[ "$DOOMBOOM" == "yes" ]]; then echo bash: text2ascii: command not found; return; fi
  local word charidx
  local firstline=()
  local secondline=()
  local thirdline=()
  local font=$(echo Clean Ugly | xargs shuf -n1 -e)
  for word in "${@}"; do
      for charidx in $(seq 0 $((${#word}-1))); do
          local char=${word:$charidx:1};
          if [ -n "$(_text2ascii$font $char)" ]; then
              firstline+=("$(_text2ascii$font $char | sed -n 1p)");
              secondline+=("$(_text2ascii$font $char | sed -n 2p)");
              thirdline+=("$(_text2ascii$font $char | sed -n 3p)");
          else
              firstline+=(" ");
              secondline+=("$char");
              thirdline+=(" ");
          fi;
      done;
      firstline+=(" ");
      secondline+=(" ");
      thirdline+=(" ");
  done;
  echo "${firstline[@]}";
  echo "${secondline[@]}";
  echo "${thirdline[@]}";
}

